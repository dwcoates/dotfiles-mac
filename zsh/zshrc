# The next line enables shell command completion for gcloud.
# if [ -f '/Users/dodgecoates/bin/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/dodgecoates/bin/google-cloud-sdk/completion.zsh.inc'; fi

